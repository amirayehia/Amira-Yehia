{% stylesheet %}
/* HEADER STYLE */
header.header_content{
  background-color: #F5F5F5;
  margin:20px 0px;
  padding: 10px 0px;
}
.header_content .content{
  display: flex; 
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin : auto
}
header .logo_title{
 width: fit-content;
 font-size: 20px;
 font-weight: bolder;


}
header .logo_desc{
  width: fit-content;
  color: black;

}
header .logo_btn {
  width: fit-content;

}
header .logo_btn button {
 background-color: #FFF544;
 color: black;
 margin: right
 ;
} 

 /* BANNER STYLE */
 
.sec_container{
  display: flex;
  margin-left: 120px;
  align-items: center;
}
.img_container{
  width: 70%;
}
.img_container img{
  width: 100%;
}
.txt_container{
  width: 30%;
}
.txt_container h2{
  font-size: 70px;
  font-weight: 500;
}
.txt_container p{
  font-size: 20px;
  font-weight: 400;
  color: black;
  line-height: 40px2.6px ;
}
.txt_container button, header .logo_btn button {
  font-size: 20px;
  font-weight: 400;
  display: inline-flex;
  align-items: center; 
  gap: 0.5rem;       
  border: none;
  padding: 15px 35px;
  position: relative;
  overflow: hidden; 
  cursor: pointer;
}
.txt_container button{
  background-color: black;
  margin-top: 50px;
  color: white; 
}

.txt_container button svg path , header .logo_btn button svg path {
  fill: currentColor; 
}

.layer {
  position: absolute;
  top: 0;
  left: -100%; 
  width: 100%;
  height: 100%;
  transition: all 0.6s ease;
  z-index: 1;
}
.txt_container button .layer{
  background-color: #FFF544;
}
header button .layer{
  background-color: black;
}
.txt_container button {
  background-color: black;
}
.txt_container button span,
.txt_container button svg ,
header button span,
header button svg
{
  position: relative; 
  z-index: 2; 
  transition: color 0.6s ease;
}

.txt_container button:hover .layer , header button:hover .layer{
  left: 0; 
}

.txt_container button:hover {
  color: black; 
}
header button:hover {
  color: white; 
}
.footer{
  background-color: #F5F5F5;
  padding: 7px 0px;

}
.footer div{
  width: fit-content;
  margin : auto;
  color: black;
}
.img_container{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.img_container img{
  width: 66%;
}



